@model EmployeeViewModel;

<form action="/employee/entry" method="post">
    <div class="mb-3">
        <i class="text-danger"></i>*
        <label class="form-label">Employee No:</label>
        <input type="text" class="form-control" name="No" required placeholder="type employee No">
    </div>
    <div class="mb-3">
        <label class="form-label">Full Name:</label>
        <input type="text" class="form-control" name="FullName" required placeholder="type full name">
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" name="Email" required placeholder="type email">
    </div>
    <div class="mb-3">
        <label class="form-label">Gender</label><br />
        <input type="radio" class="form-check-input" name="Gender" required value="f" checked>Female
        <input type="radio" class="form-check-input" name="Gender" required value="m">Male
        <input type="radio" class="form-check-input" name="Gender" required value="o">Other
    </div>
    <div class="mb-3">
        <label class="form-label">DOB</label>
        <input type="date" class="form-control" name="DOB" required min="1990-01-01" max="@DateTime.Now.ToString("yyyy-MM-dd")">
    </div>
    <div class="mb-3">
        <label class="form-label">DOE</label>
        <input type="date" class="form-control" name="DOE" required>
    </div>
    <div class="mb-3">
        <label class="form-label">DOR</label>
        <input type="date" class="form-control" name="DOR">
    </div>
    <div class="mb-3">
        <label class="form-label">Phone</label>
        <input type="tel" class="form-control" name="Phone" required placeholder="type phone">
    </div>
    <div class="mb-3">
    <select class="form-select" aria-label="Default select example" name="DepartmentId">
        <option selected>[Choose One]</option>
            @foreach(var department in Model.DepartmentsViewModel)
            {
                <option value="@department.Id">@department.Code</option>
            }
    </select>
    </div>
    <div class="mb-3">
        <select class="form-select" aria-label="Default select example" name="PositionId">
            <option selected>[Choose One]</option>
            @foreach (var position in Model.PositionsViewModel)
            {
                <option value="@position.Id">@position.Code</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Salary</label>
        <input type="number" class="form-control" name="Salary" required placeholder="type salary">
    </div>
    <div class="mb-3">
        <label class="form-label">Address</label>
        <textarea class="form-control" placeholder="type address.." name="Address"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Entry</button>
    <a href="/employee/list" class="btn btn-warning">Cancel</a>
</form>